<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class = "table">
    <tr>
    <td><%= f.label :title %></td>
    <td><%= f.text_field :title, :class=>"form-control" %></td>
  </tr>

  <tr>
    <td><%= f.label :price %></td>
    <td><%= f.text_field :price, :class=>"form-control" %></td>
  </tr>
  <tr>
    <td><%= f.label :category %></td>
    <td><%= f.select :category_id ,options_for_select(category_ids), :class=>"btn btn-primary dropdown-toggle" %></td>
  </tr>
  <tr>
    <%= f.fields_for :document do | doc |%>
    <td><%= doc.label :photo %></td>
    <td><%= doc.file_field :photo, :class=>"form-control" %></td>
    <%end%>
  </tr>
  <tr>
    <td><%= f.submit %></td>
    <td></td>
  </tr>
</table>
  <%= link_to '<<Back', products_path %>
<% end %>
