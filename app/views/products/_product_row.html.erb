      <%= form_for order_item, product_id: product.id, remote: true do |f| %>
      <h6 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h6>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "+Cart", :style=>"margin-left:0px", class: "btn btn-primary form-control" %>
          </div>
        </div>
      <% end %>
