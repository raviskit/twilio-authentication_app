<div class="container">
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
      </div>
      </div>

      <div style="padding-top:30px" class="panel-body" >

        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name) , :id=>"loginform", :class=>"form-horizontal") do |f| %>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.email_field :email, :id=> "login-username", :class=>"form-control", :placeholder=> "email", autofocus: true %>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password, :id=> "login-password", :class=>"form-control", :placeholder=>"password", autocomplete: "off" %>
          </div>



          <div class="input-group">
            <div class="checkbox">
              <label>
                  <%= f.check_box :remember_me, :id=>"login-remember" %>Remember me

            </label>
            </div>
          </div>


          <div style="margin-top:10px" class="form-group">
            <!-- Button -->

            <div class="col-sm-12 controls">
              <%= f.submit "Login", :id=>"btn-login", :class=>"btn btn-success"%>
            </div>
          </div>
      <%end%>



      </div>
    </div>
  </div>





  </div>
</div>
